<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appinventor.ai_cwilson.Mobile_Digital_Scale"
    android:versionCode="7"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/scale_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        android:name=".Helper"
        <activity
            android:name="appinventor.ai_cwilson.Mobile_Digital_Scale.MainActivity"
            android:label="@string/app_name" 
        android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="appinventor.ai_cwilson.Mobile_Digital_Scale.Calibrate" android:label="@string/app_name"
            android:noHistory="true"
        android:screenOrientation="portrait">
        </activity>
        <activity android:name="appinventor.ai_cwilson.Mobile_Digital_Scale.About" android:label="@string/app_name"
            android:noHistory="true"
        android:screenOrientation="portrait">
        </activity>
        <activity android:name="appinventor.ai_cwilson.Mobile_Digital_Scale.Settings" android:label="@string/app_name"></activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>